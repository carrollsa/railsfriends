<% if user_signed_in? %>
  <div id="friends">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <%= render friend %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
  </div>

<% else %>

  <h1>Welcome to RailsFriends!</h1>
  Please 
  <%= link_to "sign up", new_user_registration_path, class:"text-decoration-none" %>
  or 
  <%= link_to "sign in", new_user_session_path, class:"text-decoration-none" %> 
  to continue.
<% end %>