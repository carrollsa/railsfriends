<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
      <%= render friend %>
      <% end %>
    </tbody>
  </table>
      <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
</div>
